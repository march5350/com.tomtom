  },
  "source": "https://github.com/martijnpoppen/com.tomtom",
  "homeyCommunityTopicId": 58383,
  "support": "https://community.homey.app/t/app-pro-tomtom-ev-service/58383",
  "drivers": [
    {
      "id": "charging_availability",
      "class": "other",
      "connectivity": ["cloud"],
      "platforms": ["local"],
      "capabilities": [],
      "name": {
        "en": "Chargepoint",
        "nl": "Laadpaal"
      },
      "images": {
        "large": "drivers/charging_availability/assets/images/large.jpg",
        "small": "drivers/charging_availability/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "login"
        },
        {
          "id": "search",
          "navigation": {
            "prev": "login"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "search",
            "next": "get_device"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "get_device"
        },
        {
          "id": "list_connectors",
          "navigation": {
            "prev": "list_devices",
            "next": "add_device"
          }
        },
        {
          "id": "add_device"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "update_interval",
              "type": "number",
              "label": {
                "en": "Update interval",
                "nl": "Update interval"
              },
              "min": 30,
              "max": 3600,
              "units": {
                "en": "seconds",
                "nl": "seconden"
              },
              "value": 120
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Login settings",
            "nl": "Login instellingen"
          },
          "children": [
            {
              "id": "apikey",
              "type": "text",
              "label": {
                "en": "API KEY",
                "nl": "API KEY"
              },
              "value": ""
            },
            {
              "id": "chargingAvailability",
              "type": "text",
              "label": {
                "en": "chargingAvailability ID",
                "nl": "chargingAvailability ID"
              },
              "value": ""
            },
            {
              "id": "search",
              "type": "label",
              "label": {
                "en": "Searched address",
                "nl": "Gezocht adres"
              },
              "value": ""
            }
          ]
        }
      ]
    }
  ],
  "capabilities": {
    "get_available": {
      "type": "boolean",
      "title": {
        "en": "Available",
        "nl": "Beschikbaar"
      },
      "getable": true,
      "setable": false,
      "insights": false,
      "uiComponent": null,
      "icon": "assets/icons/check-square.svg"
    },
    "measure_amount_available": {
      "type": "number",
      "title": {
        "en": "Availability",
        "nl": "Beschikbaar"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "uiComponent": "sensor",
      "units": {
        "en": "Available",
        "nl": "Vrij"
      },
      "icon": "assets/icons/unlock.svg"
    },
    "measure_occupied": {
      "type": "number",
      "title": {
        "en": "Occupied",
        "nl": "Bezet"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "uiComponent": "sensor",
      "icon": "assets/icons/lock.svg",
      "units": {
        "en": "Occupied",
        "nl": "Bezet"
      }
    }
  },
  "flow": {
      "conditions": [
          {
            "id": "condition_AVAILABLE",
            "title": {
              "en": "is available",
              "nl": "is vrij"
            },
            "titleFormatted": {
              "en": "[[connector]] is available",
              "nl": "[[connector]] is vrij"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "filter": "driver_id=charging_availability"
              },
              {
                "name": "connector",
                "type": "autocomplete",
                "placeholder": {
                  "en": "Connector",
                  "nl": "Aansluiting"
                }
              }
            ]
          },{
            "id": "condition_OCCUPIED",
            "title": {
              "en": "is occupied",
              "nl": "is bezet"
            },
            "titleFormatted": {
              "en": "[[connector]] is occupied",
              "nl": "[[connector]] is bezet"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "filter": "driver_id=charging_availability"
              },
              {
                "name": "connector",
                "type": "autocomplete",
                "placeholder": {
                  "en": "Connector",
                  "nl": "Aansluiting"
                }
              }
            ]
          }
      ],
      "triggers": [
        {
            "id": "trigger_AVAILABLE",
            "title": {
                "en": "Availability changed",
                "nl": "Beschikbaarheid veranderd"
              },
              "titleFormatted": {
                "en": "[[connector]] availability changed",
                "nl": "[[connector]] beschikbaarheid is veranderd"
              },
            "tokens": [
              {
                "name": "available",
                "type": "boolean",
                "title": {
                  "en": "Available",
                  "nl": "Beschikbaar"
                }
              },
              {
                "name": "connector",
                "type": "string",
                "title": {
                  "en": "Connector",
                  "nl": "Aansluiting"
                }
              }
            ],
            "args": [
              {
                "name": "device",
                "type": "device",
                "filter": "driver_id=charging_availability"
              },
              {
                "name": "connector",
                "type": "autocomplete",
                "placeholder": {
                  "en": "Connector",
                  "nl": "Aansluiting"
                }
              }
            ],
            "highlight": true
          }
      ]
  }
}
