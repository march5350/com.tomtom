  "drivers": [
    {
      "id": "charging_availability",
      "class": "other",
      "connectivity": [
        "cloud"
      ],
      "platforms": [
        "local"
      ],
      "capabilities": [],
      "name": {
        "en": "Chargepoint",
        "nl": "Laadpaal"
      },
      "images": {
        "large": "drivers/charging_availability/assets/images/large.jpg",
        "small": "drivers/charging_availability/assets/images/small.jpg"
      },
      "pair": [
        {
          "id": "login"
        },
        {
          "id": "search",
          "navigation": {
            "prev": "login"
          }
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "prev": "search",
            "next": "get_device"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "get_device"
        },
        {
          "id": "list_connectors",
          "navigation": {
            "prev": "list_devices",
            "next": "add_device"
          }
        },
        {
          "id": "add_device"
        }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Algemene instellingen"
          },
          "children": [
            {
              "id": "update_interval",
              "type": "number",
              "label": {
                "en": "Update interval",
                "nl": "Update interval"
              },
              "min": 30,
              "max": 3600,
              "units": {
                "en": "seconds",
                "nl": "seconden"
              },
              "value": 120
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Login settings",
            "nl": "Login instellingen"
          },
          "children": [
            {
              "id": "apikey",
              "type": "text",
              "label": {
                "en": "API KEY",
                "nl": "API KEY"
              },
              "value": ""
            },
            {
              "id": "chargingAvailability",
              "type": "text",
              "label": {
                "en": "chargingAvailability ID",
                "nl": "chargingAvailability ID"
              },
              "value": ""
            },
            {
              "id": "search",
              "type": "label",
              "label": {
                "en": "Searched address",
                "nl": "Gezocht adres"
              },
              "value": ""
            }
          ]
        }
      ]
    }
  ],
  "capabilities": {
    "measure_available": {
      "type": "boolean",
      "title": {
        "en": "Available",
        "nl": "Beschikbaar"
      },
      "getable": true,
      "setable": false,
      "insights": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/check-square.svg"
    },
    "measure_amount_available": {
      "type": "number",
      "title": {
        "en": "Availability",
        "nl": "Beschikbaar"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "uiComponent": "sensor",
      "units": {
        "en": "Available",
        "nl": "Vrij"
      },
      "icon": "assets/icons/lightning-charge.svg"
    },
    "measure_occupied": {
      "type": "number",
      "title": {
        "en": "Occupied",
        "nl": "Bezet"
      },
      "getable": true,
      "setable": false,
      "insights": true,
      "uiComponent": "sensor",
      "icon": "assets/icons/battery-charging.svg",
      "units": {
        "en": "Occupied",
        "nl": "Bezet"
      }
    }
  }
}